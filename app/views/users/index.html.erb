<div class="container">
  <div class="row">
    <h1>All Users:</h1>
    <div class="col-sm-6 col-md-4">
      <% @users.each do |user| %>
        <% if current_user.followings.include?(user) %>
          <p>Following: <%= user.email %></p>
          <%= link_to 'Unfollow', unfollow_user_path(user), method: :delete, class: "btn btn-outline-danger btn-sm" %>
          <p></p>
        <% else %>
          <p>Not following: <%= user.email %></p>
          <%= link_to 'Follow', follow_user_path(user), method: :post, class: "btn btn-outline-success btn-sm" %>
          <p></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>